/* pages/profile/register/register.wxss */
.page {
  background-color: #f7f7f7;
  min-height: 100vh;
}

.form-container {
  padding: 40rpx 30rpx;
}

/* 表单项 */
.form-item {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.required {
  color: #ff4d4f;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.input:focus {
  border-color: #007bff;
  background-color: #fff;
}

/* 头像选择 */
.avatar-wrapper {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #ddd;
}

.avatar-tip {
  font-size: 26rpx;
  color: #999;
}

/* 协议同意 */
.agreement {
  margin: 40rpx 0;
}

.agreement-item {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-left: 10rpx;
}

.link {
  color: #007bff;
  text-decoration: underline;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
  border: none;
}

.register-btn.active {
  background-color: #007bff;
  color: white;
}

.register-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.register-btn.active:active {
  background-color: #0056b3;
} 