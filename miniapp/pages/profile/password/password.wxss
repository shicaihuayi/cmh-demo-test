/* pages/profile/password/password.wxss */
.page {
  background-color: #f7f7f7;
  min-height: 100vh;
}

.form-container {
  padding: 40rpx 30rpx;
}

/* 表单项 */
.form-item {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.input:focus {
  border-color: #007bff;
  background-color: #fff;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #007bff;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: none;
  margin-top: 40rpx;
}

.submit-btn:active {
  background-color: #0056b3;
} 