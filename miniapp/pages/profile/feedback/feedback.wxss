/* pages/profile/feedback/feedback.wxss */
.page {
  background-color: #f7f7f7;
  min-height: 100vh;
}

.form-container {
  padding: 30rpx;
}

/* 表单项 */
.form-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 24rpx;
  border-radius: 12rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-weight: normal;
}

/* 选择器样式 */
.select-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  background-color: #fff;
}

.select-wrapper.empty {
  color: #999;
}

.select-text {
  font-size: 28rpx;
  flex: 1;
}

.arrow {
  color: #999;
  font-size: 32rpx;
  font-weight: normal;
  margin-left: 8rpx;
}

/* 文本域样式 */
.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

/* 提示文字 */
.tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #007bff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  margin-top: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.submit-btn:active {
  opacity: 0.9;
} 