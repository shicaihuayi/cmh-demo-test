/* pages/index/index.wxss */

/* 轮播图区域 */
.banner-section {
  width: 100%;
  padding: 20rpx;
}

.swiper-container {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-item {
  width: 100%;
}

.swiper-image {
  width: 100%;
  display: block;
}

/* 简介区域 */
.introduction-section {
  margin-top: 20rpx;
}

.introduction-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

/* 会员单位区域 */
.members-section {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}

.member-item {
  width: 22%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.member-item:active {
  transform: scale(0.95);
}

.member-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.member-image {
  width: 100%;
  height: 100%;
}

.member-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.2;
  word-break: break-all;
}

/* 响应式布局 */
@media screen and (max-width: 750rpx) {
  .member-item {
    width: 48%;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
} 