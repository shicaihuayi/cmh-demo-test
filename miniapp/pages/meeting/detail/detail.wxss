/* pages/meeting/detail/detail.wxss */
@import "../../../app.wxss";

.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.content {
  background: #fff;
  padding: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  line-height: 1.4;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.info {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.agenda, .guests {
  white-space: pre-wrap;
  word-break: break-all;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

/* 错误提示 */
.error {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #ff4d4f;
  font-size: 28rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #007aff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

/* loading和error的占位符 */
.loading-placeholder, .error-placeholder {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.page-content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 160rpx; /* 为底部按钮留出空间 */
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  padding: 40rpx 30rpx;
  background-color: #fff;
  line-height: 1.4;
}

.card {
  background-color: #fff;
  margin: 20rpx 30rpx 0;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  color: #888;
  width: 140rpx;
  flex-shrink: 0;
}

.info-item .value {
  flex: 1;
}

.time-separator {
  color: #999;
  margin: 0 10rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.content-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  white-space: pre-wrap; /* 保留换行符 */
}

.agenda-text {
  padding-left: 20rpx;
}

.guests-text {
  padding-left: 20rpx;
}

.action-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  background: #1890ff;
  color: #fff;
} 